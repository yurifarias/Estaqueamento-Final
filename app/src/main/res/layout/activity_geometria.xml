<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/q3_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_weight="4.5"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/QUADRANTE"
                android:tag="Q3"/>

            <ImageButton
                android:id="@+id/e4_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/q4_button"
                android:layout_toRightOf="@+id/q3_button"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/EIXO_Z_NEGATIVO"
                android:tag="E4" />

            <ImageButton
                android:id="@+id/q4_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_weight="4.5"
                android:adjustViewBounds="true"
                android:cropToPadding="false"
                android:scaleType="centerCrop"
                android:src="@drawable/QUADRANTE"
                android:tag="Q4" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/e2_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/q3_button"
                android:layout_weight="4.5"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/EIXO_Y_NEGATIVO"
                android:tag="E2" />

            <ImageButton
                android:id="@+id/centro_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_below="@+id/e4_button"
                android:layout_toLeftOf="@+id/e1_button"
                android:layout_toRightOf="@+id/e2_button"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/CENTRO"
                android:tag="CE" />

            <ImageButton
                android:id="@+id/e1_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/q4_button"
                android:layout_weight="4.5"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/EIXO_Y_POSITIVO"
                android:tag="E1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/q2_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/e2_button"
                android:layout_weight="4.5"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/QUADRANTE"
                android:tag="Q2"/>

            <ImageButton
                android:id="@+id/e3_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_below="@+id/centro_button"
                android:layout_toLeftOf="@+id/q4_button"
                android:layout_toRightOf="@+id/q3_button"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/EIXO_Z_POSITIVO"
                android:tag="E3"/>

            <ImageButton
                android:id="@+id/q1_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/e1_button"
                android:layout_weight="4.5"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/QUADRANTE"
                android:tag="Q1"/>

        </LinearLayout>



    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_margin="8dp"
            android:id="@+id/layout_geometria_estacas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        </LinearLayout>

    </ScrollView>

</LinearLayout>